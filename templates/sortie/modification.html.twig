{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <h1>Modifier une sortie</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a href="{{ path('sortie_publier', {'sortieid' : sortie.id}) }}" class="btn btn-primary">Publier la sortie</a>

